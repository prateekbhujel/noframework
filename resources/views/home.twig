{% extends 'layouts/app.twig' %}

{% block title %} Home {% endblock %}

{% block content %}

    <h1>{{ name }}</h1>

    <div>
        {% if users is not empty %}
            {% for user in users %}
                <div> 
                    <a href="/users/{{ user.id }}" style="text-decoration: none;"> {{ user.first_name }} </a> 
                </div>
            {% endfor %}

            {{ users.links() | raw }}
        {% endif %}

    </div>

{% endblock %}